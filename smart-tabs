#!/usr/bin/env bash

# Installs smart tabs plugin (tabs for indentation, spaces for alignment).
#
# Latest revision: 2025-01-06
#
# Written and unlicensed by Miko≈Çaj Bartnicki <mikolaj@bartnicki.org>;
# please read UNLICENSE file for details.

# stop and exit on first error
set -e

downloadUrl="https://www.vim.org/scripts/download_script.php?src_id=14989"
pluginDir="plugin"
pluginFile="smarttabs.vim"

function WriteLog() {
	echo "$0: ${FUNCNAME[1]}()"
}

function DownloadPlugin() {
	WriteLog
	mkdir -p "$pluginDir"
	curl "$downloadUrl" -o "$pluginDir/$pluginFile"
}

function Main() {
	DownloadPlugin
}

Main
